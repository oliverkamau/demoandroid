<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="10dp"
        app:strokeWidth="5dp"
        app:strokeColor="@color/aliceBlue">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/khanname"
            android:layout_marginTop="20dp"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="0"
                android:layout_column="0"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Claim No."
                    android:fontFamily="@font/adamina"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_margin="2dp"/>

                <TextView
                    android:id="@+id/clmno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/adamina"
                    android:textColor="@color/blowfish"
                    android:textSize="13sp"
                    android:layout_margin="2dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="0"
                android:layout_column="1"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loss Date"
                    android:fontFamily="@font/adamina"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_margin="2dp"/>

                <TextView
                    android:id="@+id/loss_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/adamina"
                    android:textColor="@color/blowfish"
                    android:textSize="13sp"
                    android:layout_margin="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="0"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Claim Date"
                    android:fontFamily="@font/adamina"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_margin="2dp"/>

                <TextView
                    android:id="@+id/claim_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/adamina"
                    android:textColor="@color/blowfish"
                    android:textSize="13sp"
                    android:layout_margin="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="1"

                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peril"
                    android:fontFamily="@font/adamina"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_margin="2dp"/>

                <TextView
                    android:id="@+id/peril_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/adamina"
                    android:textColor="@color/blowfish"
                    android:textSize="13sp"
                    android:layout_margin="2dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="2"
                android:layout_column="0"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Claim Status"
                    android:fontFamily="@font/adamina"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_margin="2dp"/>

                <TextView
                    android:id="@+id/status_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/adamina"
                    android:textColor="@color/blowfish"
                    android:textSize="13sp"
                    android:layout_margin="2dp"

                    />



            </LinearLayout>

        </GridLayout>
